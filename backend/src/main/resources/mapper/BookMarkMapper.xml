<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.creepy.bit.mapper.BookMarkMapper">

    <insert id="insertBookMark" parameterType="com.creepy.bit.domain.BookMarkDto">
        INSERT INTO bookmarks (user_id, place_id, created_at)
        VALUES (#{userId}, #{placeId}, NOW())
    </insert>

    <delete id="deleteBookMark" parameterType="int">
        DELETE FROM bookmarks WHERE bookmark_id = #{bookmarkId}
    </delete>

    <select id="getMyBookMarks" parameterType="int" resultType="com.creepy.bit.domain.BookMarkDto">
        SELECT * FROM bookmarks WHERE user_id = #{userId} ORDER BY created_at DESC
    </select>

</mapper>
